#!/bin/sh

die() {
	echo $1
	exit 1
}

command=`basename $0`
#if [ -z "$KK_CLIMB" ]; then
#	n=`/bin/ls Kookbook.* 2>/dev/null | wc -l`
#	[ $n -eq 0 ] && die "$command: No kookbook found."
#	[ $n -gt 1 ] && die "$command: Kookbook.*: Two or more kookbooks found."
#else
	cwd=`pwd`
	while [ true ]; do
		#n=`/bin/ls Kookbook.* 2>/dev/null | wc -l`
		n=`/bin/ls Kookbook.{py,rb,pl,php,js,yaml} 2>/dev/null | wc -l`
		[ $n -eq 1 ] && break
		[ $n -gt 1 ] && die "$command: Kookbook.*: Two or more kookbooks found."
		old=$cwd
		cd ..
		cwd=`pwd`
		[ "$cwd" == "$old" ] && die "$command: No kookbook found."
	done
#fi

#kookbook=`echo Kookbook.*`
kookbook=`/bin/ls Kookbook.{py,rb,pl,php,js,yaml} 2>/dev/null`
case "$kookbook" in
*.py)	pykook "$@"  ;;
*.rb)	rbkook "$@"  ;;
*.pl)	plkook "$@"  ;;
*.php)	phpkook "$@" ;;
*.js)	jskook "$@"  ;;
*.lua)	luakook "$@"  ;;
*.yaml)	kook "$@"    ;;
esac
